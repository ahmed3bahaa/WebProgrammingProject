@{
    ViewData["Title"] = "Barber Shop";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap and Google Fonts -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<body>

    <div class="content container text-center mt-5">
        <h1 class="display-4">Berber Randevu Sistemine Hoş Geldiniz!</h1>
        <p class="lead mt-3">Size en uygun saç stilini seçmek ve randevunuzu kolayca ayarlamak için buradayız.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-4">Randevu Al</a>


    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
